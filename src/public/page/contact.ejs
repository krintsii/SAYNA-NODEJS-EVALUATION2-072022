	<!-- voici le script pour le methode fetch  -->

	
	<script>

		const LastName = document.getElementById('lname');
		const FirstName = document.getElementById('fname');
		const Avis = document.getElementById('avis');
		const Notes = document.getElementById('Note');
		const formation = document.getElementById('formation');



		function PostAvis(event) {
			event.preventDefault();
			const URL = "/api/newNotice";
			const body = {
				LastName: LastName.value,
				FirstName:FirstName.value,
				Avis:Avis.value,
				Notes:Notes.value,
				formation: formation.value
			}
			fetch(URL, {
				headers: {
					"Content-type": "application/Json",
				},
				
				method: "POST",
				body:JSON.stringify(body)
				
			}).then(result => result.json())
			.then(avis => console.log(avis))
			
		}

		document.querySelector('form').addEventListener('submit', PostAvis)
	</script>

